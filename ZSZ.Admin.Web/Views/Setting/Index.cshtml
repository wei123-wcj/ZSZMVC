@model SettingDTO[]
@{
    ViewBag.Title = "配置管理";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}


<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 管理员管理 <span class="c-gray en">&gt;</span> 配置管理 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<form action="" method="post" class="form form-horizontal" id="form-admin-add">
    <div class="pd-20">
        <div class="text-c">
            <input type="text" class="input-text" style="width:250px" placeholder="输入配置名称" id="" name="name">
            <button type="submit" class="btn btn-success" id="" name=""><i class="Hui-iconfont">&#xe665;</i> 搜配置</button>
        </div>
        <div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a href="javascript:;" onclick="datadel()" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a> <a href="javascript:;" onclick="admin_add('添加配置','Add','800','500')" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加配置</a></span> <span class="r">共有数据：<strong>@Model.Length</strong> 条</span> </div>
        <table class="table table-border table-bordered table-bg">
            <thead>
                <tr>
                    <th scope="col" colspan="7">配置列表</th>
                </tr>
                <tr class="text-c">
                    <th width="25"><input type="checkbox" name="" value=""></th>
                    <th width="150">名字</th>
                    <th width="150">值</th>
                    <th width="100">操作</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Length; i++)
                {
                    <tr class="text-c">
                        <td><input type="checkbox" value="@Model[i].Id" name="selectIDs"></td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Value</td>
                        <td><a title="编辑" href="javascript:;" onclick="admin_edit('配置信息编辑','/Setting/Update/@Model[i].Id','@Model[i].Id')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a> <a title="删除" href="javascript:;" onclick="admin_del(this,'@Model[i].Id')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
@section fontScript
{
    <script type="text/javascript">
        /*
            参数解释：
            title	标题
            url		请求的url
            id		需要操作的数据id
            w		弹出层宽度（缺省调默认值）
            h		弹出层高度（缺省调默认值）
        */
        /*管理员-增加*/
        function admin_add(title, url, w, h) {
            layer_show(title, url, w, h);
        }
        /*管理员-删除*/
        function admin_del(obj, id) {
            layer.confirm('确认要删除吗？', function (index) {
                //此处请求后台程序，下方是成功后的前台处理……
                var data = { "id": id };
                $.ajax({
                    url: "/Setting/Delete",
                    type: "post",
                    data: data,
                    dataType: "json",
                    success: function (res) {
                        if (res.Statin == "ok") {
                            $(obj).parents("tr").remove();
                            layer.msg('已删除!', { icon: 1, time: 1000 });
                        }
                        else {
                            layer.msg('删除失败!', { icon: 2, time: 1000 });
                        }
                    },
                    error: function (org) {
                        layer.msg('服务器异常!', { icon: 2, time: 1000 });
                    }
                })
            });
        }
        function datadel() {
            layer.confirm('配置删除须谨慎，确认要删除吗？', function (index) {
                //此处请求后台程序，下方是成功后的前台处理……
                // var data=$('#form').serialize();
                var datForm = $('#form-admin-add').serializeArray();
                $.ajax({
                    url: "/Setting/DeleteAll",
                    type: "post",
                    data: datForm,
                    dataType: "json",
                    success: function (res) {
                        if (res.Statin == "ok") {
                            layer.msg('已删除!', { icon: 1, time: 1000 });
                            window.parent.location.reload();
                        }
                        else {
                            layer.msg('删除失败!', { icon: 2, time: 1000 });
                        }
                    },
                    error: function (org) {
                        layer.msg('服务器异常!', { icon: 2, time: 1000 });
                    }
                })
            });
        }
        /*管理员-编辑*/
        function admin_edit(title, url, id, w, h) {
            layer_show(title, url, w, h);
        }
    </script>
}

